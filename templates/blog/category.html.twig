{% extends 'base.html.twig' %}

{% block title %}{{ category.name}}{% endblock %}

{% block body %}
        <h1>{{ category.name }}</h1>
    {% for article in articles %}


        <div>
            <h2>{{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% endfor %}

    <a href="{{ path('blog_index') }}">
        Back to homepage.
    </a>
    <br>

{% endblock %}